{
  "name": "cats-flats-bot",
  "version": "1.0.0",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --check \"src/**/*.{ts,tsx,js,json}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx,js,json}\"",
    "test": "ts-node --transpile-only tests/smoke.ts",
    "dev:web": "npm --prefix apps/web run dev",
    "build:web": "npm --prefix apps/web run build",
    "start:web": "npm --prefix apps/web run start"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.2",
    "@fastify/multipart": "^7.7.3",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^7.0.3",
    "@notionhq/client": "^2.3.0",
    "chrono-node": "^2.9.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
